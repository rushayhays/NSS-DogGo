@model DogGo.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Walker";
}

<div>
  <h1 class="mb-4">Walker Profile</h1>

  <section class="container">
    <img
      style="width:100px;float:left;margin-right:20px"
      src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg"
    />
    <div>
      <label class="font-weight-bold">Name:</label>
      <span>@Model.Walker.Name</span>
    </div>
    <div>
      <label class="font-weight-bold">Neightborhood:</label>
      <span>@Model.Walker.Neighborhood.Name</span>
    </div>
  </section>

  <hr class="mt-5" />
  <div class="clearfix"></div>

  <div class="row">
    <section class="col-8 container mt-5">
      <h1 class="text-left">Recent Walks</h1>

      <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        Client
                    </th>
                    <th>
                        Duration
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Walk walk in Model.Walks) 
                {
                    <tr>
                        <td>
                            @walk.Date
                        </td>
                        <td>
                            @walk.ClientName
                        </td>
                        <td>
                            @walk.Duration
                        </td>
                    </tr>
                }
            </tbody>
        </table>
      </div>
    </section>

    <section class="col-lg-4 col-md-8 container mt-5">
      <div>
        <label class="font-weight-bold">Total Walk Time:</label>
        <span>@Model.TotalWalkTime.WalkTimeTotal</span>
      </div>
    </section>
  </div>
</div>